<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.human.humansminigame.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple"
        tools:context=".rankFragment.RankFragment">

        <View
            android:id="@+id/rankView"
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:background="@drawable/box_light_gray"
            android:elevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <TextView
            android:id="@+id/rankTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="랭킹"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="50sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rankView"
            app:layout_constraintVertical_bias="0.55"
            />

        <Button
            android:id="@+id/rankMovieButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rank_type_background"
            android:text="영화"
            android:textStyle="bold"
            android:textSize="22sp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toTopOf="@id/rankView"
            app:layout_constraintHorizontal_bias="0.1"
            />

        <Button
            android:id="@+id/rankCardButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rank_type_background"
            android:text="카드"
            android:textStyle="bold"
            android:textSize="22sp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toTopOf="@id/rankView"
            app:layout_constraintHorizontal_bias="0.37"
            />

        <Button
            android:id="@+id/rankLeftRightButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rank_type_background"
            android:text="좌우"
            android:textStyle="bold"
            android:textSize="22sp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toTopOf="@id/rankView"
            app:layout_constraintHorizontal_bias="0.63"
            />

        <Button
            android:id="@+id/rankOperationsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rank_type_background"
            android:text="곱더"
            android:textStyle="bold"
            android:textSize="22sp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@+id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toTopOf="@id/rankView"
            app:layout_constraintHorizontal_bias="0.9"
            />

        <Button
            android:id="@+id/rankCheckButton"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/box_light_green"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="40sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@id/rankView"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            />

        <LinearLayout
            android:id="@+id/rankFirstLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/box_yellow"
            android:elevation="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toBottomOf="@id/rankCardButton"
            >

            <TextView
                android:id="@+id/rankFirstRanking"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="1st"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/rankFirstName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/rankFirstScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rankSecondLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/box_yellow"
            android:elevation="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toBottomOf="@id/rankFirstLinear"
            >

            <TextView
                android:id="@+id/rankSecondRanking"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="2nd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/rankSecondName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/rankSecondScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rankThirdLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/box_yellow"
            android:elevation="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toBottomOf="@id/rankSecondLinear"
            >

            <TextView
                android:id="@+id/rankThirdRanking"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="3rd"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/rankThirdName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/rankThirdScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rankFourthLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/box_yellow"
            android:elevation="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toBottomOf="@id/rankThirdLinear"
            >

            <TextView
                android:id="@+id/rankFourthRanking"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="4th"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/rankFourthName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/rankFourthScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:gravity="end"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rankFifthLinear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/box_yellow"
            android:elevation="10dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"
            app:layout_constraintTop_toBottomOf="@id/rankFourthLinear"
            >

            <TextView
                android:id="@+id/rankFifthRanking"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="5th"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/rankFifthName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/rankFifthScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:gravity="end"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/rankNoRankingImage"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:src="@drawable/rank_no_ranking_image"
            android:scaleType="centerCrop"
            android:elevation="10dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/rankThirdLinear"
            app:layout_constraintBottom_toTopOf="@id/rankFifthLinear"
            app:layout_constraintLeft_toLeftOf="@id/rankView"
            app:layout_constraintRight_toRightOf="@id/rankView"

            />

        <FrameLayout
            android:id="@+id/rankFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:elevation="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        </FrameLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>